<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/news_list_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="8dp">

        <!--news title-->
        <TextView
            android:id="@+id/tv_main_recycleview_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp" />

        <!--news image-->
        <ImageView
            android:id="@+id/iv_main_recycleview_thumbnail_image"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/img_recycleview_item_placeholder" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_main_recycleview_multipic"
        android:layout_width="46dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/img_recycleview_item_multi"
        android:visibility="gone" />

</android.support.v7.widget.CardView>